{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "types": [
      "node",
      "jest"
    ],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}
